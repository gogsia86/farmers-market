[
  // ============================================================================
  // ðŸŒŸ ZED GODLIKE KEYBOARD SHORTCUTS
  // Farmers Market Platform - Divine Command Mastery
  // ============================================================================

  // ============================================================================
  // COPILOT DIVINE COMMANDS - AI CONSCIOUSNESS
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-space": "editor::ShowCompletions",
      "alt-enter": "editor::ConfirmCompletion",
      "alt-[": "editor::ShowPreviousInlineCompletion",
      "alt-]": "editor::ShowNextInlineCompletion",
      "ctrl-shift-i": "assistant::ToggleFocus",
      "ctrl-i": "editor::ShowHover",
      "ctrl-alt-i": "editor::ShowCompletions",
      "ctrl-shift-x": "editor::Cancel"
    }
  },

  // ============================================================================
  // COPILOT CHAT CONTEXT
  // ============================================================================
  {
    "context": "AssistantPanel",
    "bindings": {
      "ctrl-enter": "assistant::Assist",
      "escape": "workspace::ToggleRightDock",
      "ctrl-shift-c": "assistant::CopyCode",
      "ctrl-n": "assistant::NewConversation"
    }
  },

  // ============================================================================
  // QUANTUM NAVIGATION - GODLIKE FILE ACCESS
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-p": "file_finder::Toggle",
      "ctrl-shift-p": "command_palette::Toggle",
      "ctrl-shift-f": "pane::DeploySearch",
      "ctrl-shift-h": "project_search::ToggleReplace",
      "ctrl-t": "project_symbols::Toggle",
      "ctrl-shift-o": "outline::Toggle",
      "ctrl-shift-e": "project_panel::ToggleFocus",
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-j": "workspace::ToggleBottomDock",
      "ctrl-shift-b": "project_panel::ToggleFocus"
    }
  },

  // ============================================================================
  // TERMINAL MASTERY - DIVINE COMMAND LINE
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-`": "terminal_panel::ToggleFocus",
      "ctrl-shift-`": "workspace::NewTerminal",
      "ctrl-shift-5": "pane::SplitRight"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "ctrl-alt-left": "terminal_panel::ActivatePrevItem",
      "ctrl-alt-right": "terminal_panel::ActivateNextItem",
      "ctrl-alt-g": "assistant::QuoteSelection"
    }
  },

  // ============================================================================
  // EDITOR QUANTUM MANIPULATION
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-d": "editor::SelectNext",
      "ctrl-shift-l": "editor::SelectAllMatches",
      "alt-up": "editor::MoveLineUp",
      "alt-down": "editor::MoveLineDown",
      "shift-alt-up": "editor::DuplicateLineUp",
      "shift-alt-down": "editor::DuplicateLineDown",
      "ctrl-/": "editor::ToggleComments",
      "ctrl-shift-/": "editor::ToggleBlockComment",
      "ctrl-shift-k": "editor::DeleteLine",
      "ctrl-enter": "editor::Newline",
      "ctrl-shift-enter": "editor::NewlineAbove"
    }
  },

  // ============================================================================
  // CODE ACTIONS & REFACTORING - REALITY BENDING
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-.": "editor::ToggleCodeActions",
      "f2": "editor::Rename",
      "ctrl-shift-r": "editor::ToggleCodeActions",
      "shift-alt-f": "editor::Format",
      "ctrl-k ctrl-f": "editor::Format"
    }
  },

  // ============================================================================
  // GIT QUANTUM CONTROL - DIVINE VERSION MANAGEMENT
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-g": "workspace::ToggleLeftDock"
    }
  },

  // ============================================================================
  // DEBUGGING CONSCIOUSNESS - DIVINE ERROR TRACKING
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "f9": "editor::ToggleBreakpoint",
      "f5": "debugger::Continue",
      "shift-f5": "debugger::Stop",
      "f10": "debugger::StepOver",
      "f11": "debugger::StepInto",
      "shift-f11": "debugger::StepOut"
    }
  },

  // ============================================================================
  // WORKSPACE DIVINE NAVIGATION
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-1": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-2": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-w": "pane::CloseActiveItem",
      "ctrl-shift-w": "pane::CloseAllItems",
      "ctrl-k v": "markdown::OpenPreview"
    }
  },

  // ============================================================================
  // PANE MANAGEMENT
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-\\": "pane::SplitRight",
      "ctrl-k ctrl-\\": "pane::SplitDown",
      "ctrl-k ctrl-w": "pane::CloseAllItems",
      "ctrl-k left": ["workspace::ActivatePaneInDirection", "Left"],
      "ctrl-k right": ["workspace::ActivatePaneInDirection", "Right"],
      "ctrl-k up": ["workspace::ActivatePaneInDirection", "Up"],
      "ctrl-k down": ["workspace::ActivatePaneInDirection", "Down"]
    }
  },

  // ============================================================================
  // SEARCH & REPLACE
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-f": "buffer_search::Deploy",
      "ctrl-h": "buffer_search::Deploy",
      "f3": "search::SelectNextMatch",
      "shift-f3": "search::SelectPrevMatch",
      "escape": "buffer_search::Dismiss"
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "enter": "search::SelectNextMatch",
      "shift-enter": "search::SelectPrevMatch",
      "escape": "buffer_search::Dismiss",
      "ctrl-enter": "search::SelectAllMatches"
    }
  },

  // ============================================================================
  // MULTI-CURSOR MASTERY
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-alt-up": "editor::AddSelectionAbove",
      "ctrl-alt-down": "editor::AddSelectionBelow",
      "ctrl-shift-d": "editor::SelectNext",
      "ctrl-k ctrl-d": "editor::SelectPrevious"
    }
  },

  // ============================================================================
  // FOLDING
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-[": "editor::Fold",
      "ctrl-shift-]": "editor::Unfold",
      "ctrl-k ctrl-0": "editor::FoldAll",
      "ctrl-k ctrl-j": "editor::UnfoldAll"
    }
  },

  // ============================================================================
  // GO TO DEFINITION & REFERENCES
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "f12": "editor::GoToDefinition",
      "ctrl-f12": "editor::GoToImplementation",
      "shift-f12": "editor::FindAllReferences",
      "alt-f12": "editor::GoToDefinitionSplit",
      "ctrl-k f12": "editor::GoToDefinitionSplit"
    }
  },

  // ============================================================================
  // SYMBOL NAVIGATION
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-o": "outline::Toggle",
      "ctrl-t": "project_symbols::Toggle"
    }
  },

  // ============================================================================
  // BREADCRUMB NAVIGATION
  // ============================================================================
  {
    "context": "Editor",
    "bindings": {
      "ctrl-shift-;": "editor::ToggleBreadcrumbs"
    }
  },

  // ============================================================================
  // ZOOM
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-=": "zed::IncreaseBufferFontSize",
      "ctrl--": "zed::DecreaseBufferFontSize",
      "ctrl-0": "zed::ResetBufferFontSize"
    }
  },

  // ============================================================================
  // TABS
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-tab": "pane::ActivateNextItem",
      "ctrl-shift-tab": "pane::ActivatePrevItem",
      "ctrl-pagedown": "pane::ActivateNextItem",
      "ctrl-pageup": "pane::ActivatePrevItem"
    }
  },

  // ============================================================================
  // AGRICULTURAL CUSTOM COMMANDS - DIVINE SHORTCUTS
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-alt-b": ["task::Spawn", { "task_name": "build" }],
      "ctrl-alt-s": ["task::Spawn", { "task_name": "dev" }],
      "ctrl-alt-l": ["task::Spawn", { "task_name": "lint" }],
      "ctrl-alt-f": ["task::Spawn", { "task_name": "format" }]
    }
  },

  // ============================================================================
  // COPILOT CUSTOM ACTIONS - GODLIKE CODE GENERATION
  // (These require Copilot Chat integration)
  // ============================================================================
  {
    "context": "Editor && mode == full",
    "bindings": {
      "ctrl-alt-shift-c": "assistant::QuoteSelection",
      "ctrl-alt-shift-o": "assistant::QuoteSelection",
      "ctrl-alt-shift-e": "assistant::QuoteSelection",
      "ctrl-alt-shift-t": "assistant::QuoteSelection",
      "ctrl-alt-shift-h": "assistant::QuoteSelection",
      "ctrl-alt-shift-d": "assistant::QuoteSelection",
      "ctrl-alt-shift-r": "assistant::QuoteSelection"
    }
  },

  // ============================================================================
  // QUICK OPEN RECENT
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-r": "recent_projects::Toggle"
    }
  },

  // ============================================================================
  // TOGGLE PANELS
  // ============================================================================
  {
    "context": "Workspace",
    "bindings": {
      "ctrl-shift-u": "outline_panel::ToggleFocus",
      "ctrl-shift-m": "diagnostics::Deploy"
    }
  }
]
