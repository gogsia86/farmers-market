{
  "features": {
    "copilot": true
  },
  "inline_completions": {
    "enabled": true,
    "min_length": 2,
    "max_length": 1000
  },
  "buffer_font_family": "Fira Code",
  "buffer_font_size": 14,
  "buffer_font_weight": 400,
  "buffer_line_height": {
    "custom": 1.5
  },
  "ui_font_size": 14,
  "ui_font_family": "Segoe UI",
  "theme": "One Dark",
  "autosave": "on_focus_change",
  "tab_size": 2,
  "hard_tabs": false,
  "soft_wrap": "editor_width",
  "show_whitespaces": "all",
  "indent_guides": {
    "enabled": true,
    "active_line_width": 1
  },
  "relative_line_numbers": true,
  "cursor_blink": true,
  "scroll_beyond_last_line": "one_page",
  "vertical_scroll_margin": 3,
  "scrollbar": {
    "show": "always",
    "git_diff": true,
    "diagnostics": true
  },
  "format_on_save": "on",
  "formatter": [
    "language_server",
    {
      "code_action": "source.fixAll.eslint"
    },
    {
      "code_action": "source.organizeImports"
    },
    {
      "code_action": "source.removeUnusedImports"
    }
  ],
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "includeCompletionsForModuleExports": true,
          "includeCompletionsWithInsertText": true,
          "importModuleSpecifierPreference": "non-relative",
          "jsxAttributeCompletionStyle": "auto",
          "quotePreference": "double"
        },
        "typescript": {
          "tsserver": {
            "maxTsServerMemory": 8192,
            "watchOptions": {
              "watchFile": "useFsEvents",
              "watchDirectory": "useFsEvents",
              "fallbackPolling": "dynamicPriority"
            }
          },
          "suggest": {
            "completeFunctionCalls": true,
            "includeAutomaticOptionalChainCompletions": true
          },
          "inlayHints": {
            "parameterNames": {
              "enabled": "all"
            },
            "parameterTypes": {
              "enabled": true
            },
            "variableTypes": {
              "enabled": true
            },
            "functionLikeReturnTypes": {
              "enabled": true
            }
          }
        }
      }
    },
    "eslint": {
      "settings": {
        "codeActionsOnSave": {
          "mode": "all",
          "rules": [
            "source.fixAll.eslint"
          ]
        },
        "format": true,
        "validate": true
      }
    },
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "classRegex": [
            [
              "cva(([^)]*))",
              "[\"'`]([^\"'`]*).*?[\"'`]"
            ],
            [
              "cn(([^)]*))",
              "(?:'|\"|`)([^']*)(?:'|\"|`)"
            ]
          ]
        },
        "includeLanguages": {
          "typescript": "javascript",
          "typescriptreact": "javascript"
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.next",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.turbo",
    "**/coverage",
    "**/out"
  ],
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoFetchInterval": 300
  },
  "terminal": {
    "blinking": "terminal_controlled",
    "font_family": "Fira Code",
    "font_size": 13,
    "font_weight": 400,
    "line_height": {
      "custom": 1.3
    },
    "shell": {
      "with_arguments": {
        "program": "pwsh.exe",
        "args": [
          "-NoLogo"
        ]
      }
    },
    "env": {
      "COPILOT_AGGRESSIVENESS": "high",
      "COPILOT_VERBOSITY": "minimal",
      "COPILOT_CONTEXT_WINDOW": "enhanced"
    }
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": true,
    "indent_size": 20,
    "auto_reveal_entries": true,
    "auto_fold_dirs": true
  },
  "outline_panel": {
    "button": true,
    "dock": "right"
  },
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": true,
    "dock": "right"
  },
  "search": {
    "whole_word": false,
    "case_sensitive": false,
    "regex": false
  },
  "pane_split_direction_horizontal": "up",
  "pane_split_direction_vertical": "left",
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "diagnostics": {
    "include_warnings": true
  },
  "show_inline_completions": true,
  "show_completion_documentation": true,
  "assistant": {
    "enabled": true,
    "default_model": {
      "provider": "copilot",
      "model": "gpt-4"
    },
    "button": true,
    "dock": "right"
  },
  "languages": {
    "TypeScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": [
        "language_server",
        {
          "code_action": "source.fixAll.eslint"
        },
        {
          "code_action": "source.organizeImports"
        },
        {
          "code_action": "source.removeUnusedImports"
        }
      ]
    },
    "TSX": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": [
        "language_server",
        {
          "code_action": "source.fixAll.eslint"
        },
        {
          "code_action": "source.organizeImports"
        },
        {
          "code_action": "source.removeUnusedImports"
        }
      ]
    },
    "JavaScript": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "JSON": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on",
      "formatter": "language_server"
    },
    "Markdown": {
      "tab_size": 2,
      "hard_tabs": false,
      "soft_wrap": "preferred_line_length",
      "preferred_line_length": 80
    },
    "Prisma": {
      "tab_size": 2,
      "hard_tabs": false,
      "format_on_save": "on"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_preview_from_code_navigation": true
  },
  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true
  },
  "journal": {
    "enabled": false
  },
  "base_keymap": "VSCode",
  "active_pane_magnification": 1,
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  "hour_format": "hour24",
  "double_click_in_multibuffer": "select",
  "seed_search_query_from_cursor": "selection"
}