# =============================================================================
# üóÑÔ∏è DATABASE (CRITICAL - REQUIRED)
# =============================================================================

# PostgreSQL connection string
# Get from: Neon, Railway, Supabase, Vercel Postgres, or your own PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database?schema=public

# Example for Neon:
# DATABASE_URL=postgresql://user:pass@ep-xxx.us-east-1.aws.neon.tech/neondb?sslmode=require

# Example for Railway:
# DATABASE_URL=postgresql://postgres:pass@containers-us-west-123.railway.app:5432/railway

# Example for Vercel Postgres:
# DATABASE_URL=postgres://default:pass@ep-xxx-pooler.us-east-1.postgres.vercel-storage.com/verceldb

# Direct connection (for migrations)
DIRECT_URL=${DATABASE_URL}

# =============================================================================
# üîê AUTHENTICATION (CRITICAL - REQUIRED)
# =============================================================================

# NextAuth secret - MUST be at least 32 characters
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-32-character-minimum-key-here

# NextAuth URL - Your production domain
NEXTAUTH_URL=https://your-project.vercel.app

# Alternative: For custom domain
# NEXTAUTH_URL=https://yourdomain.com

# =============================================================================
# üí≥ STRIPE PAYMENT (CRITICAL - REQUIRED FOR CHECKOUT)
# =============================================================================

# Get from: https://dashboard.stripe.com/apikeys

# Secret key (server-side only)
STRIPE_SECRET_KEY=sk_test_51xxxxx_your_stripe_secret_key_xxxxx

# Publishable key (client-side)
STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxx_your_stripe_publishable_key_xxxxx

# Public publishable key (Next.js public env var)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_51xxxxx_your_stripe_publishable_key_xxxxx

# Webhook secret (for Stripe webhooks)
STRIPE_WEBHOOK_SECRET=whsec_xxxxx_your_webhook_secret_xxxxx

# Production keys (when ready):
# STRIPE_SECRET_KEY=sk_live_xxxxx
# STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx

# =============================================================================
# üìß EMAIL SERVICE (HIGH PRIORITY - REQUIRED FOR NOTIFICATIONS)
# =============================================================================

# Option 1: Resend (Recommended)
RESEND_API_KEY=re_xxxxx_your_resend_api_key_xxxxx

# Option 2: SMTP (Alternative)
# EMAIL_SERVER=smtp://username:password@smtp.example.com:587
# EMAIL_FROM=noreply@yourdomain.com

# Option 3: SendGrid
# SENDGRID_API_KEY=SG.xxxxx_your_sendgrid_api_key_xxxxx

# =============================================================================
# üñºÔ∏è IMAGE UPLOAD (MEDIUM PRIORITY - OPTIONAL)
# =============================================================================

# Cloudinary (for product images)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
CLOUDINARY_UPLOAD_PRESET=your_upload_preset

# Alternative: Upload directly to Vercel Blob
# BLOB_READ_WRITE_TOKEN=vercel_blob_xxxxx

# =============================================================================
# üåç APPLICATION CONFIG (RECOMMENDED)
# =============================================================================

# Node environment
NODE_ENV=production

# Application URL
NEXT_PUBLIC_APP_URL=https://your-project.vercel.app

# Site name and metadata
NEXT_PUBLIC_SITE_NAME=Farmers Market Platform
NEXT_PUBLIC_SITE_DESCRIPTION=Connect local farmers with consumers

# =============================================================================
# üìä MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================

# Sentry (Error tracking)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx
NEXT_PUBLIC_SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically enabled on Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=xxxxx

# =============================================================================
# üîë ADMIN ACCOUNT (OPTIONAL - FOR TESTING)
# =============================================================================

# Default admin credentials (for seeding)
ADMIN_EMAIL=admin@farmersmarket.test
ADMIN_PASSWORD=YourSecurePassword123!

# =============================================================================
# üöÄ DEPLOYMENT CONFIG (OPTIONAL)
# =============================================================================

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# Enable standalone output
# OUTPUT=standalone

# Prisma generate output
# PRISMA_GENERATE_SKIP_AUTOINSTALL=true

# =============================================================================
# üîß FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable/disable features
ENABLE_SUBSCRIPTIONS=false
ENABLE_FARMER_CHAT=false
ENABLE_ANALYTICS_DASHBOARD=true

# Platform commission rate (percentage)
PLATFORM_COMMISSION_RATE=10

# =============================================================================
# üåæ AGRICULTURAL FEATURES (OPTIONAL - PLATFORM-SPECIFIC)
# =============================================================================

AGRICULTURAL_CONSCIOUSNESS=enabled
DIVINE_PATTERNS=active
BIODYNAMIC_VALIDATION=true

