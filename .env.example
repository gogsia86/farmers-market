# ============================================
# üåæ AGRICULTURAL DOMAIN SETTINGS
# ============================================

# Current Agricultural Season
# Options: SPRING | SUMMER | FALL | WINTER
# Used for seasonal validation and features
AGRICULTURAL_SEASON=SPRING

# Biodynamic Calendar Integration
ENABLE_BIODYNAMIC_CALENDAR=false

# Lunar Phase Awareness
ENABLE_LUNAR_PHASE_TRACKING=false

# ============================================
# üîß DEVELOPMENT TOOLS
# ============================================

# Enable Debug Mode
DEBUG=false

# Log Level
# Options: error | warn | info | debug | trace
LOG_LEVEL=info

# Pretty Print Logs (disable in production)
LOG_PRETTY_PRINT=true

# Enable Source Maps (disable in production for performance)
ENABLE_SOURCE_MAPS=true

# ============================================
# üöÄ DEPLOYMENT CONFIGURATION
# ============================================

# Deployment Platform
# Options: vercel | docker | aws | azure | local
DEPLOYMENT_PLATFORM=local

# Enable Production Optimizations
ENABLE_PRODUCTION_OPTIMIZATIONS=false

# SSL Configuration (for self-hosted deployments)
SSL_ENABLED=false
SSL_CERT_PATH=
SSL_KEY_PATH=

# ============================================
# üîí SECURITY SETTINGS
# ============================================

# CORS Allowed Origins (comma-separated)
# Production: Restrict to your domains
# Development: Can use * for convenience
CORS_ALLOWED_ORIGINS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400

# CSRF Protection
CSRF_ENABLED=true

# ============================================
# üìù FEATURE FLAGS
# ============================================

# Enable specific features (useful for gradual rollout)
FEATURE_FLAG_AI_RECOMMENDATIONS=false
FEATURE_FLAG_ADVANCED_ANALYTICS=false
FEATURE_FLAG_REAL_TIME_CHAT=false
FEATURE_FLAG_MOBILE_APP_API=false

# ============================================
# üß™ TESTING CONFIGURATION
# ============================================

# Test Database URL (separate from development)
TEST_DATABASE_URL=file:./test.db

# Disable External API Calls in Tests
DISABLE_EXTERNAL_APIS_IN_TESTS=true

# ============================================
# üìä ANALYTICS & METRICS
# ============================================

# Enable Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false

# Enable User Analytics
ENABLE_USER_ANALYTICS=false

# Analytics Sample Rate (0.0 to 1.0)
ANALYTICS_SAMPLE_RATE=1.0

# ============================================
# üåê INTERNATIONALIZATION (I18N)
# ============================================

# Default Locale
DEFAULT_LOCALE=en-US

# Supported Locales (comma-separated)
SUPPORTED_LOCALES=en-US,es-ES,fr-FR

# ============================================
# üìß NOTIFICATION SETTINGS
# ============================================

# Enable Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true

# Enable Push Notifications
ENABLE_PUSH_NOTIFICATIONS=false

# Notification Service URL
NOTIFICATION_SERVICE_URL=

# ============================================
# üîÑ BACKGROUND JOBS & CRON
# ============================================

# Enable Background Jobs
ENABLE_BACKGROUND_JOBS=false

# Job Queue Redis URL (can be same as REDIS_URL)
JOB_QUEUE_REDIS_URL=

# ============================================
# üì¶ THIRD-PARTY INTEGRATIONS
# ============================================

# Slack Webhook (for notifications)
SLACK_WEBHOOK_URL=

# Discord Webhook (for notifications)
DISCORD_WEBHOOK_URL=

# ============================================
# üéØ AGRICULTURAL BUSINESS LOGIC
# ============================================

# Minimum Order Amount (in cents)
MIN_ORDER_AMOUNT=1000

# Maximum Order Amount (in cents)
MAX_ORDER_AMOUNT=100000

# Default Delivery Radius (in miles)
DEFAULT_DELIVERY_RADIUS=25

# Enable Farm Verification
ENABLE_FARM_VERIFICATION=true

# Auto-approve Farms
AUTO_APPROVE_FARMS=false

