{
  "folders": [
    {
      "name": "ðŸŒ¾ Farmers Market - Main",
      "path": "."
    },
    {
      "name": "ðŸ“‹ Planning Docs",
      "path": "./docs/planning"
    },
    {
      "name": "âš¡ Divine Instructions",
      "path": "./.github/instructions"
    },
    {
      "name": "ðŸŽ¯ Context Files",
      "path": "./context-workspace"
    }
  ],
  "settings": {
    "workbench.sideBar.location": "left",
    "workbench.panel.defaultLocation": "bottom",
    "workbench.activityBar.visible": true,
    "workbench.editor.showTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.editor.wrapTabs": true,
    "workbench.panel.opensMaximized": "never",
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "explorer.openEditors.visible": 10,
    "explorer.sortOrder": "type",
    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
      "*.ts": "${capture}.d.ts,${capture}.test.ts,${capture}.spec.ts",
      "*.tsx": "${capture}.test.tsx,${capture}.spec.tsx,${capture}.stories.tsx",
      "*.js": "${capture}.d.ts,${capture}.test.js,${capture}.spec.js",
      "*.jsx": "${capture}.test.jsx,${capture}.spec.jsx,${capture}.stories.jsx",
      "package.json": "package-lock.json,yarn.lock,pnpm-lock.yaml,bun.lockb",
      ".env": ".env.*",
      "README.md": "*.md"
    },
    "window.commandCenter": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "right",
    "workbench.editor.limit.enabled": true,
    "workbench.editor.limit.value": 15,
    "workbench.editor.limit.perEditorGroup": true,
    "github.copilot.chat.welcomeMessage": "never",
    "github.copilot.chat.localeOverride": "en",
    "chat.defaultAgent": "copilot",
    "workbench.colorTheme": "Default Dark Modern",
    "workbench.iconTheme": "vs-seti"
  },
  "launch": {
    "version": "0.2.0",
    "configurations": [
      {
        "name": "ðŸš€ Next.js Development",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/next",
        "args": ["dev"],
        "cwd": "${workspaceFolder}",
        "runtimeArgs": ["--preserve-symlinks"],
        "env": {
          "NODE_ENV": "development"
        }
      }
    ]
  }
}
