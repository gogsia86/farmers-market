      "testCoverage": 90,
      "codeComplexity": 10,
      "duplication": 5,
      "maintainabilityIndex": 70,
      "eslintErrors": 0,
      "typeScriptErrors": 0
    },
    "actions": {
      "blockCommit": false,
      "warningNotification": true,
      "qualityReport": true
