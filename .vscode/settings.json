  // ============================================================================
  // SECTION 23: AI INTEGRATION
  // ============================================================================

  "language_models": {
    "open_router": {
      "api_url": "https://openrouter.ai/api/v1",
      "available_models": [
        {
          "name": "perplexity/pplx-70b-online",
