{
  // ============================================================================
  // HP OMEN DEVELOPMENT WORKSTATION - FINAL OPTIMIZED SETTINGS
  // ============================================================================
  // Hardware: i7-9750H (6 cores, 12 threads @ 2.60GHz)
  //           64GB DDR4 RAM + NVIDIA GeForce RTX 2070 Max-Q (8GB GDDR6, 2304 CUDA cores)
  // OS:       Windows 11 Pro Build 26200
  // Updated:  November 12, 2025
  // Purpose:  Maximum performance for development workflows + GPU acceleration
  // ============================================================================

  // ============================================================================
  // SECTION 1: HARDWARE ACCELERATION & PERFORMANCE
  // ============================================================================

  // GPU Acceleration (RTX 2070 Max-Q 8GB Optimization)
  "editor.gpuAcceleration": "on",
  "terminal.integrated.gpuAcceleration": "on",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "workbench.list.smoothScrolling": true,
  "editor.semanticHighlighting.enabled": true,

  // Window & UI Performance
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": true,
  "window.zoomLevel": 0,

  // ============================================================================
  // SECTION 2: MEMORY OPTIMIZATION (64GB RAM)
  // ============================================================================

  // TypeScript Server (56GB allocation - divine performance)
  "typescript.tsserver.maxTsServerMemory": 57344,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling",
    "excludeDirectories": ["**/node_modules", "**/.next", "**/.turbo"]
  },
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",

  // File System Memory (20GB allocation - divine scale)
  "files.maxMemoryForLargeFilesMB": 20480,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",

  // File Watcher Exclusions
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/.turbo/**": true,
    "**/coverage/**": true
  },

  // Search Performance
  "search.maxResults": 50000,
  "search.followSymlinks": false,
  "search.smartCase": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/coverage": true
  },

  // ============================================================================
  // SECTION 3: EDITOR & CODE EXPERIENCE
  // ============================================================================

  // Editor Visual Features
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,

  // Bracket Pair & Guide Features (GPU accelerated)
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  // Minimap & Overview (8GB VRAM enables character rendering)
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 200,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.showSlider": "always",

  // Suggestions & IntelliSense
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.quickSuggestionsDelay": 10,
  "editor.suggest.showStatusBar": true,
  "editor.inlineSuggest.enabled": true,

  // Inlay Hints
  "editor.inlayHints.enabled": "onUnlessPressed",
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

  // Navigation & Hover
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.hover.enabled": true,
  "editor.hover.sticky": true,
  "editor.hover.delay": 300,

  // Rulers & Visual Aids
  "editor.rulers": [80, 120],
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "all",
  "editor.matchBrackets": "always",

  // ============================================================================
  // SECTION 4: TERMINAL CONFIGURATION
  // ============================================================================

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'JetBrains Mono', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.scrollback": 10000,

  // ============================================================================
  // SECTION 5: FORMATTING & LINTING
  // ============================================================================

  // Format on Save
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // ESLint Configuration (Enhanced)
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onType",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.lintTask.enable": true,

  // Prettier Configuration
  "prettier.enable": true,
  "prettier.requireConfig": false,

  // Language-Specific Formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },

  // ============================================================================
  // SECTION 6: GIT INTEGRATION
  // ============================================================================

  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.openRepositoryInParentFolders": "always",

  // ============================================================================
  // SECTION 7: WORKBENCH & UI
  // ============================================================================

  // Theme & Appearance
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "fit",

  // Activity Bar & Layout
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",

  // ============================================================================
  // SECTION 8: VITEST TESTING FRAMEWORK CONFIGURATION
  // ============================================================================

  // Vitest Extension Configuration (vitest.explorer - Modern API)
  // Note: The modern extension auto-detects vitest.config.ts
  // and doesn't require explicit enable/commandLine settings

  // Disable deprecated Jest extension
  "jest.enable": false,
  "jest.disabledWorkspaceFolders": ["ðŸŒ¾ Farmers Market - Root"],

  // ============================================================================
  // SECTION 9: FILE EXPLORER & NAVIGATION
  // ============================================================================

  "explorer.confirmDelete": false,
  "explorer.autoReveal": true,
  "explorer.compactFolders": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.test.ts, ${capture}.spec.ts",
    "*.tsx": "${capture}.css, ${capture}.module.css, ${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.stories.tsx",
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, .npmrc, .nvmrc",
    ".env": ".env.*, .env.example, .env.local, .env.development, .env.production",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo",
    "next.config.js": "next.config.mjs, next-env.d.ts",
    "tailwind.config.js": "tailwind.config.ts, postcss.config.js",
    "prisma/schema.prisma": "prisma/migrations/*, prisma/seed.ts"
  },

  // ============================================================================
  // SECTION 9: AI & COPILOT INTEGRATION
  // ============================================================================

  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.codeGeneration.instructions": [
    {
      "text": "Follow DIVINE CORE PRINCIPLES from .github/instructions/01_DIVINE_CORE_PRINCIPLES.instructions.md"
    },
    {
      "text": "Apply agricultural quantum patterns from .github/instructions/02_AGRICULTURAL_QUANTUM_MASTERY.instructions.md"
    },
    {
      "text": "Optimize for HP OMEN hardware (RTX 2070 Max-Q 8GB, 64GB RAM, 12 threads)"
    },
    {
      "text": "Use kilo-scale patterns from .github/instructions/11_KILO_SCALE_ARCHITECTURE.instructions.md"
    }
  ],
  "github.copilot.advanced": {
    "debug.overrideEngine": "gpt-4",
    "debug.useNodeFetch": true,
    "length": 1000
  },

  // ============================================================================
  // SECTION 10: EXTENSIONS & UPDATES
  // ============================================================================

  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,

  // ============================================================================
  // SECTION 11: DEBUGGING & TESTING
  // ============================================================================

  "debug.internalConsoleOptions": "neverOpen",
  "debug.openDebug": "neverOpen",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.allowBreakpointsEverywhere": true,

  // ============================================================================
  // SECTION 12: SECURITY & WORKSPACE
  // ============================================================================

  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "prompt",

  // ============================================================================
  // SECTION 13: ADVANCED PERFORMANCE SETTINGS
  // ============================================================================

  // Enhanced Performance Features
  "editor.largeFileOptimizations": true,
  "editor.maxTokenizationLineLength": 20000,
  "files.useExperimentalFileWatcher": true,
  "gitlens.advanced.caching.enabled": true,

  // CPU Optimization for 6-core processor
  "typescript.tsserver.useSyntaxServer": "auto",
  "javascript.suggest.maxSuggestions": 50,

  // Extension Performance
  "extensions.experimental.affinity": {
    "ms-vscode.js-debug": 1,
    "esbenp.prettier-vscode": 1,
    "bradlc.vscode-tailwindcss": 1
  },

  // ============================================================================
  // SECTION 14: FRAMEWORK-SPECIFIC OPTIMIZATIONS
  // ============================================================================

  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,

  // File Associations
  "files.associations": {
    "*.css": "tailwindcss",
    "*.prisma": "prisma",
    "*.env*": "dotenv",
    "*.mdx": "markdown"
  },

  // ============================================================================
  // SECTION 15: ACCESSIBILITY & USABILITY
  // ============================================================================

  "editor.accessibilitySupport": "off",
  "workbench.reduceMotion": "off",

  // Spell Checking
  "cSpell.words": [
    "biodynamic",
    "chakra",
    "clsx",
    "Contentful",
    "Copilot",
    "cva",
    "datagrid",
    "Farmers",
    "frontmatter",
    "Geospatial",
    "Lucide",
    "nextjs",
    "OMEN",
    "Postgres",
    "Prisma",
    "pnpm",
    "radix",
    "shadcn",
    "Supabase",
    "tailwindcss",
    "trpc",
    "typecheck",
    "zustand"
  ],

  // ============================================================================
  // FINAL PERFORMANCE VALIDATION SETTINGS
  // ============================================================================

  // Monitor these for performance tuning
  "editor.cursorBlinkingCaretAnimation": "blink",
  "editor.find.cursorMoveOnType": true,
  "editor.links": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.wordWrap": "off",

  // Final memory safety checks
  "editor.inlayHints.fontSize": 11,
  "editor.inlayHints.padding": true,

  // ============================================================================
  // SECTION 16: TASK PERFORMANCE OPTIMIZATION (HP OMEN)
  // ============================================================================

  "task.autoDetect": "on",
  "task.quickOpen.history": 10,
  "task.quickOpen.detail": true,
  "task.quickOpen.skip": false,
  "task.saveBeforeRun": "always",
  "task.reconnection": true,

  // Terminal Performance for Tasks
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "terminal.integrated.enablePersistentSessions": true,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  }
}
