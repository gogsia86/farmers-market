  "github.copilot.advanced": {
    "debug.useNodeFetcher": false,
    "debug.testOverrideProxyUrl": "",
    "debug.overrideProxyUrl": "",
    "authProvider": "github",
    "debug.filterLogCategories": [],
    "inlineSuggestCount": 5,
    "listCount": 15,
    "length": 1000,
    "aggressiveness": "high",
    "verbosity": "minimal",
    "contextWindow": "enhanced"
  },

  // ============================================================================
  // SECTION 13: TESTING FRAMEWORK
  // ============================================================================

  "jest.enable": false,
  "jest.disabledWorkspaceFolders": ["ðŸŒ¾ Farmers Market - Root"],

  // ============================================================================
  // SECTION 14: DEBUGGING
  // ============================================================================

  "debug.internalConsoleOptions": "openOnSessionStart",
  "debug.openDebug": "neverOpen",
  "debug.showBreakpointsInOverviewRuler": true,
  "debug.allowBreakpointsEverywhere": true,
  "debug.showInlineBreakpointCandidates": true,
  "debug.console.fontSize": 14,
  "debug.console.wordWrap": true,

  // ============================================================================
  // SECTION 15: PROBLEMS PANEL
  // ============================================================================

  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // ============================================================================
  // SECTION 16: DIFF EDITOR
  // ============================================================================

  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderSideBySide": true,
  "diffEditor.wordWrap": "on",

  // ============================================================================
  // SECTION 17: NOTEBOOK
  // ============================================================================

  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  "notebook.lineNumbers": "on",
  "notebook.outline.showCodeCells": true,

  // ============================================================================
  // SECTION 18: SECURITY & WORKSPACE
  // ============================================================================

  "security.workspace.trust.enabled": true,
  "security.workspace.trust.untrustedFiles": "open",

  // ============================================================================
  // SECTION 19: EXTENSIONS
  // ============================================================================

  "extensions.autoUpdate": true,
  "extensions.ignoreRecommendations": false,
  "extensions.experimental.affinity": {
    "ms-vscode.js-debug": 1,
    "esbenp.prettier-vscode": 1,
    "bradlc.vscode-tailwindcss": 1
  },

  // ============================================================================
  // SECTION 20: FRAMEWORK-SPECIFIC OPTIMIZATIONS
  // ============================================================================

  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  },
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.experimental.classRegex": [
    ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
    ["cn\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"],
    ["tw`([^`]*)", "([^`]*)"]
  ],

  // Path IntelliSense
  "path-intellisense.mappings": {
    "@": "${workspaceFolder}/src",
    "@/components": "${workspaceFolder}/src/components",
    "@/lib": "${workspaceFolder}/src/lib",
    "@/types": "${workspaceFolder}/src/types",
    "@/styles": "${workspaceFolder}/src/styles",
    "@/hooks": "${workspaceFolder}/src/hooks",
    "@/utils": "${workspaceFolder}/src/utils"
  },

  // Prisma
  "prisma.showPrismaDataPlatformNotification": false,

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.fontSize": "0.9em",
  "errorLens.messageBackgroundMode": "message",
  "errorLens.gutterIconsEnabled": true,

  // GitLens
  "gitlens.advanced.caching.enabled": true,

  // Console Ninja PRO
  "console-ninja.featureSet": "Pro",
  "console-ninja.captureFunctions": true,
  "console-ninja.captureObjects": true,
  "console-ninja.showInlineValues": true,
  "console-ninja.toolsToEnableDuringDebugging": ["Performance"],
  "console-ninja.fontSize": 13,
  "console-ninja.outputMode": "In-Place",
  "console-ninja.showTimes": true,

  // ============================================================================
  // SECTION 21: TASK PERFORMANCE
  // ============================================================================

  "task.autoDetect": "on",
  "task.quickOpen.history": 10,
  "task.quickOpen.detail": true,
  "task.quickOpen.skip": false,
  "task.saveBeforeRun": "always",
  "task.reconnection": true,

  // ============================================================================
  // SECTION 22: SPELL CHECKING
  // ============================================================================

  "cSpell.words": [
