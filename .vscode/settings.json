{
  // ============================================================================
  // HP OMEN DEVELOPMENT WORKSTATION - OPTIMIZED SETTINGS
  // ============================================================================
  // Hardware: i7-9750H (6 cores, 12 threads @ 2.60GHz)
  //           64GB DDR4 RAM + NVIDIA GeForce RTX 2070 Max-Q (8GB GDDR6, 2304 CUDA cores)
  // OS:       Windows 11 Pro Build 26200
  // Updated:  January 2025 (Fixed duplicates and optimized)
  // Purpose:  Maximum performance for development workflows + GPU acceleration
  // ============================================================================

  // ============================================================================
  // SECTION 1: HARDWARE ACCELERATION & PERFORMANCE
  // ============================================================================

  // GPU Acceleration (RTX 2070 Max-Q 8GB Optimization)
  "editor.gpuAcceleration": "on",
  "terminal.integrated.gpuAcceleration": "on",
  "editor.smoothScrolling": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "smooth",
  "workbench.list.smoothScrolling": true,
  "editor.semanticHighlighting.enabled": true,

  // Window & UI Performance
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "compact",
  "window.commandCenter": true,
  "window.zoomLevel": 0,

  // ============================================================================
  // SECTION 2: MEMORY OPTIMIZATION (64GB RAM)
  // ============================================================================

  // TypeScript Server (56GB allocation - divine performance)
  "typescript.tsserver.maxTsServerMemory": 57344,
  "typescript.tsserver.watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriorityPolling",
    "excludeDirectories": ["**/node_modules", "**/.next", "**/.turbo"]
  },
  "typescript.tsserver.useSyntaxServer": "auto",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.useAliasesForRenames": true,
  "typescript.suggest.autoImports": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.preferences.jsxAttributeCompletionStyle": "auto",
  "typescript.preferences.quoteStyle": "double",
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,

  // TypeScript Inlay Hints
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,

  // JavaScript IntelliSense
  "javascript.suggest.autoImports": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.suggest.maxSuggestions": 100,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.inlayHints.parameterNames.enabled": "all",
  "javascript.inlayHints.parameterTypes.enabled": true,
  "javascript.inlayHints.variableTypes.enabled": true,

  // File System Memory (20GB allocation - divine scale)
  "files.maxMemoryForLargeFilesMB": 20480,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 500,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.eol": "\n",
  "files.useExperimentalFileWatcher": true,

  // File Associations
  "files.associations": {
    "*.css": "tailwindcss",
    "*.prisma": "prisma",
    "*.env*": "dotenv",
    "*.mdx": "markdown"
  },

  // File Watcher Exclusions (Consolidated)
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/out/**": true,
    "**/.turbo/**": true,
    "**/coverage/**": true,
    "**/profiling_output/**": true
  },

  // ============================================================================
  // SECTION 3: SEARCH & NAVIGATION
  // ============================================================================

  "search.maxResults": 50000,
  "search.followSymlinks": false,
  "search.smartCase": true,
  "search.maintainFileSearchCache": true,
  "search.quickOpen.includeSymbols": true,
  "search.seedWithNearestWord": true,
  "search.seedOnFocus": true,
  "search.quickAccess.preserveInput": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.next": true,
    "**/.turbo": true,
    "**/coverage": true
  },

  // ============================================================================
  // SECTION 4: EDITOR & CODE EXPERIENCE
  // ============================================================================

  // Editor Visual Features
  "editor.fontFamily": "'Cascadia Code', 'Fira Code', 'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Bracket Pair & Guide Features (GPU accelerated)
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.guides.bracketPairsHorizontal": "active",
  "editor.guides.indentation": true,
  "editor.guides.highlightActiveIndentation": true,

  // Minimap & Overview (8GB VRAM enables character rendering)
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 200,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.showSlider": "always",

  // Suggestions & IntelliSense
  "editor.suggestSelection": "first",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "on",
    "strings": "on"
  },
  "editor.quickSuggestionsDelay": 10,
  "editor.suggest.showStatusBar": true,
  "editor.suggest.preview": true,
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.showWords": false,
  "editor.inlineSuggest.enabled": true,
  "editor.wordBasedSuggestions": "off",
  "editor.wordBasedSuggestionsMode": "currentDocument",
  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",

  // Inlay Hints
  "editor.inlayHints.enabled": "on",
  "editor.inlayHints.fontSize": 11,
  "editor.inlayHints.padding": true,

  // Navigation & Hover
  "editor.stickyScroll.enabled": true,
  "editor.stickyScroll.maxLineCount": 5,
  "editor.hover.enabled": true,
  "editor.hover.sticky": true,
  "editor.hover.delay": 300,

  // Visual Aids
  "editor.rulers": [80, 120],
  "editor.renderWhitespace": "selection",
  "editor.renderLineHighlight": "all",
  "editor.matchBrackets": "always",
  "editor.unicodeHighlight.ambiguousCharacters": true,
  "editor.unicodeHighlight.invisibleCharacters": true,
  "editor.linkedEditing": true,
  "editor.largeFileOptimizations": true,
  "editor.maxTokenizationLineLength": 20000,

  // Performance & Behavior
  "editor.find.cursorMoveOnType": true,
  "editor.links": true,
  "editor.occurrencesHighlight": "singleFile",
  "editor.selectionHighlight": true,
  "editor.wordWrap": "off",
  "editor.accessibilitySupport": "off",

  // ============================================================================
  // SECTION 5: FORMATTING & LINTING
  // ============================================================================

  // Format on Save
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit",
    "source.removeUnusedImports": "explicit",
    "source.addMissingImports": "explicit"
  },

  // ESLint Configuration
  "eslint.enable": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "eslint.run": "onType",
  "eslint.format.enable": true,
  "eslint.codeActionsOnSave.mode": "all",
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.lintTask.enable": true,

  // Prettier Configuration
  "prettier.enable": true,
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": true,

  // Language-Specific Formatters
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[powershell]": {
    "editor.defaultFormatter": "ms-vscode.powershell"
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma",
    "editor.formatOnSave": true
  },

  // ============================================================================
  // SECTION 6: TERMINAL CONFIGURATION
  // ============================================================================

  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Cascadia Code', 'JetBrains Mono', monospace",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.tabs.location": "right",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "terminal.integrated.persistentSessionReviveProcess": "onExitAndWindowClose",
  "terminal.integrated.enablePersistentSessions": true,

  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell",
      "args": ["-NoLogo", "-ExecutionPolicy", "Bypass"]
    },
    "Command Prompt": {
      "path": ["${env:windir}\\System32\\cmd.exe"],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash",
      "icon": "terminal-bash"
    }
  },

  // ============================================================================
  // SECTION 7: GIT INTEGRATION
  // ============================================================================

  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.autofetchPeriod": 180,
  "git.fetchOnPull": true,
  "git.pruneOnFetch": true,
  "git.postCommitCommand": "sync",
  "git.openRepositoryInParentFolders": "always",
  "git.branchProtection": ["main", "master", "production"],
  "git.branchPrefix": "feature/",
  "git.showActionButton": {
    "commit": true,
    "publish": true,
    "sync": true
  },

  // ============================================================================
  // SECTION 8: WORKBENCH & UI
  // ============================================================================

  // Theme & Appearance
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "vs-seti",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.tabSizing": "fit",
  "workbench.reduceMotion": "off",

  // Layout
  "workbench.activityBar.location": "top",
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",

  // ============================================================================
  // SECTION 9: BREADCRUMBS & NAVIGATION
  // ============================================================================

  "breadcrumbs.enabled": true,
  "breadcrumbs.filePath": "on",
  "breadcrumbs.symbolPath": "on",
  "breadcrumbs.symbolSortOrder": "position",

  // ============================================================================
  // SECTION 10: OUTLINE
  // ============================================================================

  "outline.icons": true,
  "outline.problems.enabled": true,
  "outline.problems.badges": true,
  "outline.problems.colors": true,

  // ============================================================================
  // SECTION 11: FILE EXPLORER & NESTING (CONSOLIDATED)
  // ============================================================================

  "explorer.confirmDelete": false,
  "explorer.autoReveal": true,
  "explorer.compactFolders": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js, ${capture}.d.ts, ${capture}.test.ts, ${capture}.spec.ts, ${capture}.map",
    "*.tsx": "${capture}.css, ${capture}.module.css, ${capture}.styles.ts, ${capture}.test.tsx, ${capture}.spec.tsx, ${capture}.stories.tsx",
    "*.js": "${capture}.test.js, ${capture}.spec.js, ${capture}.min.js, ${capture}.map",
    "*.jsx": "${capture}.test.jsx, ${capture}.spec.jsx, ${capture}.module.css",
    "package.json": "package-lock.json, pnpm-lock.yaml, yarn.lock, .npmrc, .nvmrc, .yarnrc",
    ".env": ".env.*, .env.example, .env.local, .env.development, .env.production, .envrc",
    "tsconfig.json": "tsconfig.*.json, tsconfig.tsbuildinfo",
    "next.config.js": "next.config.mjs, next.config.ts, next-env.d.ts",
    "tailwind.config.js": "tailwind.config.ts, tailwind.config.mjs, postcss.config.js, postcss.config.mjs",
    "docker-compose.yml": "docker-compose.*.yml, Dockerfile*",
    "README.md": "CHANGELOG.md, CONTRIBUTING.md, LICENSE*",
    "prisma/schema.prisma": "prisma/migrations/*, prisma/seed.ts"
  },

  // ============================================================================
  // SECTION 12: AI & COPILOT INTEGRATION
  // ============================================================================

  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "yaml": true,
    "jsonc": true,
    "typescript": true,
    "typescriptreact": true
  },

  "github.copilot.editor.enableAutoCompletions": true,
  "github.copilot.editor.enableCodeActions": true,
  "github.copilot.editor.iterativeFixing": true,
  "github.copilot.editor.showSuggestionsInMinimap": false,
  "github.copilot.editor.minCompletionLength": 2,
  "github.copilot.editor.maxCompletionLength": 1000,
  "github.copilot.inlineSuggest.enable": true,
  "github.copilot.renameSuggestions.triggerAutomatically": true,

  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.completionRate": 250,
  "github.copilot.chat.showCompletionsOnPrompt": true,
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.terminalChatLocation": "quickChat",

