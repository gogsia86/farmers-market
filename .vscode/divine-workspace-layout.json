{
  "_schema": "Divine VS Code Workspace Layout for Agricultural Consciousness",
  "_description": "Ultimate dashboard layout for monitoring Copilot, performance, and agricultural development",
  "_purpose": "Maximum visibility into all development dimensions",
  "_updated": "October 22, 2025",
  "_status": "100/100 GOD-TIER MONITORING CONSCIOUSNESS",

  "workbench.panel.defaultLocation": "right",
  "workbench.panel.opensMaximized": "preserve",
  "workbench.sideBar.location": "left",
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.tabSizing": "shrink",

  "divine.layout.zones": {
    "primary": {
      "editor": {
        "position": "center",
        "width": "60%",
        "purpose": "Main coding consciousness area"
      },
      "copilot": {
        "position": "right-top",
        "width": "40%",
        "height": "50%",
        "purpose": "AI consciousness monitoring"
      },
      "monitoring": {
        "position": "right-bottom",
        "width": "40%",
        "height": "30%",
        "purpose": "System & agricultural consciousness metrics"
      },
      "terminal": {
        "position": "bottom",
        "width": "100%",
        "height": "20%",
        "purpose": "Command execution and git operations"
      }
    }
  },

  "divine.panels.configuration": {
    "sidebar_left": {
      "explorer": {
        "priority": 1,
        "always_visible": true,
        "agricultural_file_grouping": true
      },
      "git": {
        "priority": 2,
        "show_timeline": true,
        "agricultural_commit_patterns": true
      },
      "extensions": {
        "priority": 3,
        "show_ai_extensions": true
      }
    },

    "panel_right": {
      "copilot_chat": {
        "priority": 1,
        "always_open": true,
        "agricultural_context": true,
        "divine_instructions_active": true
      },
      "github_copilot": {
        "priority": 2,
        "show_suggestions": true,
        "inline_completions": true
      },
      "problems": {
        "priority": 3,
        "group_by_severity": true,
        "agricultural_lint_rules": true
      }
    },

    "panel_bottom": {
      "terminal": {
        "priority": 1,
        "split_view": true,
        "tabs": [
          {
            "name": "üåæ Agricultural Dev",
            "cwd": "farmers-market",
            "command": "npm run dev:turbo"
          },
          {
            "name": "‚ö° GPU Profiling",
            "cwd": "profiling_scripts",
            "command": "pwsh"
          },
          {
            "name": "üóÑÔ∏è Database",
            "cwd": "farmers-market",
            "command": "npx prisma studio"
          },
          {
            "name": "üß™ Testing",
            "cwd": "farmers-market",
            "command": "npm test -- --watch"
          }
        ]
      },
      "output": {
        "priority": 2,
        "channels": ["Tasks", "Git", "Extension Host", "GitHub Copilot"]
      },
      "debug_console": {
        "priority": 3,
        "visible_when_debugging": true
      }
    }
  },

  "divine.monitoring.widgets": {
    "performance_dashboard": {
      "gpu_utilization": {
        "visible": true,
        "rtx_2070_specific": true,
        "real_time": true
      },
      "memory_usage": {
        "visible": true,
        "total_64gb": true,
        "heap_monitoring": true
      },
      "cpu_usage": {
        "visible": true,
        "per_core": true,
        "agricultural_load_balancing": true
      }
    },

    "agricultural_consciousness": {
      "current_season": {
        "visible": true,
        "adaptive_workflows": true
      },
      "crop_cycle_status": {
        "visible": true,
        "development_phase": true
      },
      "soil_health": {
        "visible": true,
        "code_quality_mapping": true
      }
    },

    "copilot_activity": {
      "suggestions_count": {
        "visible": true,
        "acceptance_rate": true
      },
      "agricultural_patterns": {
        "visible": true,
        "divine_instructions": true
      },
      "chat_interactions": {
        "visible": true,
        "context_quality": true
      }
    }
  },

  "divine.shortcuts.dashboard": {
    "toggle_copilot_chat": "Ctrl+Alt+C",
    "toggle_performance_monitor": "Ctrl+Alt+P",
    "toggle_agricultural_view": "Ctrl+Alt+A",
    "toggle_git_timeline": "Ctrl+Alt+G",
    "focus_terminal_agricultural": "Ctrl+Alt+T",
    "show_divine_commands": "Ctrl+Shift+D"
  },

  "divine.status_bar.items": {
    "agricultural_season": {
      "text": "üåæ $(calendar) ${season}",
      "tooltip": "Current agricultural development season",
      "command": "agricultural.changeseason"
    },
    "copilot_status": {
      "text": "ü§ñ $(copilot) ${status}",
      "tooltip": "GitHub Copilot divine consciousness status",
      "command": "github.copilot.toggleInlineSuggestion"
    },
    "gpu_utilization": {
      "text": "‚ö° RTX: ${gpu_percent}%",
      "tooltip": "RTX 2070 Max-Q utilization",
      "command": "gpu.showProfile"
    },
    "divine_consciousness": {
      "text": "üåü Divine: ${level}",
      "tooltip": "Overall divine consciousness level",
      "command": "divine.showDashboard"
    }
  }
}
