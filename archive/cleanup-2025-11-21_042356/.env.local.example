# ============================================
# PERPLEXITY AI CONFIGURATION
# ============================================
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# Model Configuration (Perplexity Pro models available)
# Options: llama-3.1-sonar-small-128k-online, llama-3.1-sonar-large-128k-online,
#          llama-3.1-sonar-huge-128k-online (Pro only)
PERPLEXITY_MODEL=llama-3.1-sonar-huge-128k-online

# ============================================
# NEXT.JS CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/farmers_market

# ============================================
# AUTHENTICATION
# ============================================
NEXTAUTH_SECRET=your_secret_key_here
NEXTAUTH_URL=http://localhost:3000

# ============================================
# STRIPE PAYMENT (Optional)
# ============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
