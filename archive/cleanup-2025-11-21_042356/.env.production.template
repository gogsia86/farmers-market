# ============================================
# VERCEL PRODUCTION ENVIRONMENT VARIABLES
# ============================================
# Copy these to Vercel Dashboard → Settings → Environment Variables

# ============================================
# DATABASE CONFIGURATION (REQUIRED)
# ============================================
# Get from: Vercel Postgres, Supabase, Railway, or Neon
DATABASE_URL="postgresql://username:password@host:5432/database?schema=public&sslmode=require"

# ============================================
# REDIS CONFIGURATION (REQUIRED)
# ============================================
# Get from: Upstash (recommended for Vercel)
# https://console.upstash.com
REDIS_URL="redis://default:password@host:port"

# ============================================
# NEXTAUTH CONFIGURATION (REQUIRED)
# ============================================
NEXTAUTH_URL="https://your-domain.vercel.app"
NEXTAUTH_SECRET="generate-with-openssl-rand-base64-32"

# Generate secret:
# openssl rand -base64 32

# ============================================
# STRIPE PAYMENT (OPTIONAL)
# ============================================
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_live_..."
STRIPE_SECRET_KEY="sk_live_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# ============================================
# PAYPAL PAYMENT (OPTIONAL)
# ============================================
NEXT_PUBLIC_PAYPAL_CLIENT_ID="your_client_id"
PAYPAL_CLIENT_SECRET="your_secret"

# ============================================
# EMAIL SERVICE (OPTIONAL - RECOMMENDED)
# ============================================
# SendGrid recommended for Vercel
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="apikey"
SMTP_PASSWORD="SG.your-sendgrid-api-key"
SMTP_FROM="noreply@yourdomain.com"

# ============================================
# PERPLEXITY AI (OPTIONAL)
# ============================================
PERPLEXITY_API_KEY="pplx-your-api-key"

# ============================================
# APPLICATION URLS (REQUIRED)
# ============================================
NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_API_URL="https://your-domain.vercel.app/api"

# ============================================
# SENTRY ERROR TRACKING (OPTIONAL)
# ============================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project"
SENTRY_ORG="your-organization"
SENTRY_PROJECT="farmers-market"

# ============================================
# NODE ENVIRONMENT
# ============================================
NODE_ENV="production"
NEXT_TELEMETRY_DISABLED="1"
