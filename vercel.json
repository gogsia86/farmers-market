{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "farmers-market-platform",
  "buildCommand": "prisma generate && next build",
  "devCommand": "npm run dev",
  "installCommand": "npm ci --legacy-peer-deps --prefer-offline || npm install --legacy-peer-deps",
  "framework": "nextjs",
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_VERSION": "20",
      "NODE_OPTIONS": "--max-old-space-size=4096",
      "TURBOPACK": "0",
      "SENTRY_UPLOAD_DRY_RUN": "true",
      "NEXT_DISABLE_SOURCEMAPS": "true",
      "SKIP_ENV_VALIDATION": "true",
      "NEXT_TELEMETRY_DISABLED": "1",
      "PRISMA_GENERATE_SKIP_AUTOINSTALL": "true",
      "CI": "true"
    }
  },
  "outputDirectory": ".next",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(self)"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "destination": "/admin",
      "permanent": false
    }
  ],
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 10,
      "memory": 1024
    },
    "src/app/api/ai/**/*.ts": {
      "maxDuration": 30,
      "memory": 3008
    },
    "src/app/api/checkout/**/*.ts": {
      "maxDuration": 15,
      "memory": 1024
    },
    "src/app/api/payments/**/*.ts": {
      "maxDuration": 15,
      "memory": 1024
    },
    "src/app/(admin)/**/*.tsx": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "crons": [
    {
      "path": "/api/cron/cleanup-sessions",
      "schedule": "0 2 * * *"
    }
  ],
  "env": {
    "SKIP_ENV_VALIDATION": "true",
    "NODE_ENV": "production",
    "TURBOPACK": "0",
    "SENTRY_UPLOAD_DRY_RUN": "true",
    "NEXT_DISABLE_SOURCEMAPS": "true",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "github": {
    "silent": true
  }
}
