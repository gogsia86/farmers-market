{
  "name": "farmers-market",
  "version": "1.1.0",
  "private": true,
  "type": "module",
  "description": "Agricultural E-Commerce Platform - Next.js 16 + Prisma 7",
  "engines": {
    "node": ">=20.x",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "///// LIFECYCLE HOOKS /////": "",
    "postinstall": "prisma generate || echo 'Prisma generate skipped'",
    "prepare": "node -e \"if (!process.env.CI && !process.env.DOCKER && !process.env.HUSKY) { try { require('husky').install() } catch (e) {} }\"",
    "prebuild": "node -e \"if (!process.env.VERCEL && !process.env.CI) { console.log('Type checking...'); require('child_process').execSync('tsc --noEmit', {stdio: 'inherit'}); }\" || echo 'Type check in development only'",
    "///// DEVELOPMENT /////": "",
    "dev": "cross-env NODE_OPTIONS='--max-old-space-size=16384' NODE_ENV=development next dev --turbo -p 3001",
    "dev:webpack": "cross-env NODE_OPTIONS='--max-old-space-size=16384' NODE_ENV=development next dev --webpack -p 3001",
    "///// PRODUCTION BUILD /////": "",
    "build": "prisma generate && next build",
    "build:analyze": "cross-env ANALYZE=true NODE_OPTIONS='--max-old-space-size=16384' next build --webpack",
    "start": "cross-env NODE_OPTIONS='--max-old-space-size=8192' next start -p 3001",
    "///// VERCEL DEPLOYMENT /////": "",
    "vercel-build": "prisma generate && next build",
    "vercel:preflight": "node scripts/vercel-preflight.js",
    "///// CODE QUALITY /////": "",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "quality": "npm run type-check && npm run lint && npm run format:check",
    "///// UNIT TESTS (JEST) /////": "",
    "pretest": "prisma generate",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=8192 jest --maxWorkers=6",
    "test:watch": "cross-env NODE_OPTIONS=--max-old-space-size=8192 jest --watch --maxWorkers=4",
    "test:coverage": "cross-env NODE_OPTIONS=--max-old-space-size=8192 jest --coverage --maxWorkers=6",
    "test:ci": "cross-env NODE_OPTIONS=--max-old-space-size=8192 jest --ci --maxWorkers=6",
    "///// E2E TESTS (PLAYWRIGHT) /////": "",
    "test:e2e": "playwright test --workers=6",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed --workers=4",
    "test:e2e:debug": "playwright test --debug",
    "///// SPECIALIZED TESTING (See docs/SCRIPTS_REFERENCE.md for details) /////": "",
    "test:visual": "playwright test tests/visual --workers=6",
    "test:responsive": "playwright test tests/mobile --workers=4",
    "///// NOTE: Mobile app (React Native) is in separate repo: github.com/gogsia86/farmers-market-mobile-app /////": "",
    "test:a11y": "playwright test tests/accessibility --workers=6",
    "test:load": "k6 run tests/load/comprehensive-load-test.ts",
    "///// NEW: BOT TESTING & IMPROVEMENTS /////": "",
    "test:visual:baseline": "tsx scripts/visual-regression-test.ts --baseline",
    "test:visual:compare": "tsx scripts/visual-regression-test.ts --compare",
    "migrate:testid": "tsx scripts/add-testid-migration.ts",
    "migrate:testid:dry": "tsx scripts/add-testid-migration.ts --dry-run",
    "seed:test": "tsx scripts/seed-test-data.ts",
    "seed:test:clean": "tsx scripts/seed-test-data.ts --clean",
    "seed:test:comprehensive": "tsx scripts/seed-test-data.ts --comprehensive",
    "///// BOT AUTOMATION /////": "",
    "bot:mvp": "tsx scripts/mvp-automation-bot.ts",
    "bot:check": "tsx scripts/website-checker-bot.ts",
    "bot:check:continuous": "tsx scripts/website-checker-bot.ts continuous",
    "bot:divine": "tsx scripts/bot-cli.ts divine",
    "bot:quick": "tsx scripts/bot-cli.ts quick",
    "bot:production": "tsx scripts/production-health-check.ts",
    "test:security": "jest tests/security/security-scanner.test.ts --runInBand --detectOpenHandles",
    "///// TEST USERS MANAGEMENT /////": "",
    "test:users:create": "tsx scripts/create-test-users.ts",
    "///// COMPREHENSIVE WEBSITE INSPECTION /////": "",
    "inspect:website": "tsx scripts/comprehensive-website-inspector.ts",
    "inspect:website:quick": "tsx scripts/comprehensive-website-inspector.ts -- --quick",
    "inspect:public": "tsx scripts/comprehensive-website-inspector.ts -- --portal public",
    "inspect:customer": "tsx scripts/comprehensive-website-inspector.ts -- --portal customer",
    "inspect:farmer": "tsx scripts/comprehensive-website-inspector.ts -- --portal farmer",
    "inspect:admin": "tsx scripts/comprehensive-website-inspector.ts -- --portal admin",
    "inspect:all": "tsx scripts/comprehensive-website-inspector.ts -- --portal all",
    "///// DATABASE (PRISMA) /////": "",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "db:studio": "prisma studio",
    "db:validate": "prisma validate && prisma format --check",
    "db:fix": "tsx scripts/fix-database-connection.ts",
    "db:test": "tsx scripts/fix-database-connection.ts --test",
    "validate:db": "tsx scripts/validate-database.ts",
    "///// PRODUCTION DATABASE SEEDING /////": "",
    "seed:production": "tsx scripts/seed-vercel-production.ts",
    "seed:production:vercel": "tsx scripts/seed-vercel-production.ts",
    "///// REDIS CACHE /////": "",
    "redis:test": "tsx scripts/test-redis-connection.ts",
    "redis:health": "tsx scripts/test-redis-connection.ts",
    "///// DOCKER (5 CORE COMMANDS - See docs/DOCKER.md for full reference) /////": "",
    "docker:build": "docker build -t farmers-market:latest -f docker/Dockerfile .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:clean": "docker-compose down -v && docker system prune -f",
    "///// MAINTENANCE & UTILITIES /////": "",
    "clean:cache": "rm -rf .jest-cache coverage playwright-report",
    "clean:all": "rm -rf .jest-cache coverage playwright-report node_modules/.cache",
    "kill-server": "node scripts/kill-dev-server.js"
  },
