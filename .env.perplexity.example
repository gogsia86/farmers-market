# âš¡ PERPLEXITY PRO API CONFIGURATION
# Divine Agricultural Intelligence powered by Perplexity Pro

# Your Perplexity API Key (Pro tier recommended)
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your_api_key_here

# Model Configuration (Pro models)
# Available models:
# - sonar-pro (recommended for complex reasoning)
# - sonar-reasoning (deep analytical tasks)
# - sonar-turbo (fast responses)
PERPLEXITY_MODEL=sonar-pro

# Advanced Configuration
PERPLEXITY_MAX_TOKENS=4000
PERPLEXITY_TEMPERATURE=0.2
PERPLEXITY_TOP_P=0.9

# Agricultural Domain Enhancement
PERPLEXITY_ENABLE_SEARCH=true
PERPLEXITY_SEARCH_DOMAIN_FILTER=agriculture,farming,organic,sustainability

# Rate Limiting (Pro tier: higher limits)
PERPLEXITY_REQUESTS_PER_MINUTE=50
PERPLEXITY_MAX_RETRIES=3

# Logging & Monitoring
PERPLEXITY_LOG_LEVEL=info
PERPLEXITY_ENABLE_METRICS=true
