# ========================================
# üåæ Farmers Market Mobile App - Environment Configuration
# ========================================
# Copy this file to `.env` and fill in your actual values
# NEVER commit the `.env` file to version control!

# ========================================
# üîß ENVIRONMENT
# ========================================
APP_ENV=development
# Options: development | staging | production

# ========================================
# üåê API CONFIGURATION
# ========================================
# Development API (local backend)
# For iOS Simulator: use localhost
# For Android Emulator: use 10.0.2.2
# For physical device: use your computer's local IP (e.g., 192.168.1.100)
API_BASE_URL=http://localhost:3001/api

# Production API
API_BASE_URL_PRODUCTION=https://api.farmersmarket.com/api

# API Timeout (milliseconds)
API_TIMEOUT=30000

# API Version
API_VERSION=v1

# ========================================
# üîê AUTHENTICATION
# ========================================
# JWT Token Configuration
JWT_REFRESH_THRESHOLD=300000
# Time before token expiry to trigger refresh (5 minutes = 300000ms)

# Session Configuration
SESSION_TIMEOUT=3600000
# User session timeout (1 hour = 3600000ms)

# ========================================
# üí≥ STRIPE PAYMENT CONFIGURATION
# ========================================
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY_DEV=pk_test_YOUR_DEV_PUBLISHABLE_KEY_HERE
STRIPE_PUBLISHABLE_KEY_PROD=pk_live_YOUR_PRODUCTION_PUBLISHABLE_KEY_HERE

# Stripe API Version
STRIPE_API_VERSION=2023-10-16

# ========================================
# üìç GOOGLE MAPS CONFIGURATION
# ========================================
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_MAPS_API_KEY_ANDROID=YOUR_ANDROID_MAPS_API_KEY_HERE
GOOGLE_MAPS_API_KEY_IOS=YOUR_IOS_MAPS_API_KEY_HERE

# Default Map Region
DEFAULT_MAP_LATITUDE=37.7749
DEFAULT_MAP_LONGITUDE=-122.4194
DEFAULT_MAP_ZOOM=12

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================
# Sentry Error Tracking
# Get your DSN from: https://sentry.io/settings/projects/
SENTRY_DSN=https://YOUR_SENTRY_DSN_HERE@sentry.io/YOUR_PROJECT_ID
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
# 0.0 to 1.0 (0.1 = 10% of transactions)

# Analytics (Firebase, Amplitude, etc.)
ANALYTICS_ENABLED=true
FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY_HERE
FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID_HERE
FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID_HERE

# ========================================
# üì± PUSH NOTIFICATIONS
# ========================================
# Expo Push Notifications
EXPO_PROJECT_ID=YOUR_EXPO_PROJECT_ID_HERE

# Firebase Cloud Messaging (FCM) for Android
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY_HERE

# Apple Push Notification Service (APNS) - configured in EAS
APNS_KEY_ID=YOUR_APNS_KEY_ID_HERE
APNS_TEAM_ID=YOUR_APPLE_TEAM_ID_HERE

# ========================================
# üóÑÔ∏è LOCAL STORAGE & CACHING
# ========================================
# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL=3600000
# Default cache time-to-live (1 hour = 3600000ms)

# Offline Queue Configuration
OFFLINE_QUEUE_MAX_SIZE=100
OFFLINE_QUEUE_RETRY_ATTEMPTS=3
OFFLINE_QUEUE_RETRY_DELAY=5000
# Delay between retry attempts (5 seconds = 5000ms)

# ========================================
# üì∑ MEDIA & UPLOADS
# ========================================
# Image Upload Configuration
MAX_IMAGE_SIZE=5242880
# Maximum image size in bytes (5MB = 5242880 bytes)

IMAGE_QUALITY=0.8
# Image compression quality (0.0 to 1.0)

MAX_IMAGES_PER_UPLOAD=10
# Maximum number of images in a single upload

# Supported image formats
SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,webp

# CDN Base URL (if using CDN for images)
CDN_BASE_URL=https://cdn.farmersmarket.com

# ========================================
# üîí SECURITY
# ========================================
# Certificate Pinning (production only)
ENABLE_SSL_PINNING=false
SSL_CERTIFICATE_HASH=YOUR_CERTIFICATE_SHA256_HASH_HERE

# Biometric Authentication
ENABLE_BIOMETRIC_AUTH=true

# Security Headers
ENABLE_SECURITY_HEADERS=true

# ========================================
# üß™ FEATURE FLAGS
# ========================================
# Enable/disable features for testing
FEATURE_CHAT_ENABLED=true
FEATURE_VIDEO_CALL_ENABLED=false
FEATURE_SUBSCRIPTION_ENABLED=true
FEATURE_LOYALTY_PROGRAM_ENABLED=true
FEATURE_SOCIAL_SHARING_ENABLED=true
FEATURE_DARK_MODE_ENABLED=true
FEATURE_OFFLINE_MODE_ENABLED=true
FEATURE_AR_PREVIEW_ENABLED=false

# ========================================
# üåæ AGRICULTURAL FEATURES
# ========================================
# Seasonal Awareness
ENABLE_SEASONAL_FEATURES=true
DEFAULT_SEASON=SPRING
# Options: SPRING | SUMMER | FALL | WINTER

# Biodynamic Calendar Integration
ENABLE_LUNAR_CALENDAR=true

# Farm Certification
ENABLE_CERTIFICATION_VERIFICATION=true

# ========================================
# üìê APP CONFIGURATION
# ========================================
# App Display
APP_NAME=Farmers Market
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Search Configuration
SEARCH_DEBOUNCE_MS=300
MIN_SEARCH_LENGTH=2

# Location Services
LOCATION_ACCURACY=high
# Options: low | balanced | high | best

LOCATION_UPDATE_INTERVAL=10000
# Location update interval (10 seconds = 10000ms)

# ========================================
# üîî NOTIFICATION PREFERENCES
# ========================================
# Default notification settings
DEFAULT_NOTIFICATIONS_ENABLED=true
DEFAULT_ORDER_NOTIFICATIONS=true
DEFAULT_DELIVERY_NOTIFICATIONS=true
DEFAULT_PROMOTIONAL_NOTIFICATIONS=false
DEFAULT_SEASONAL_NOTIFICATIONS=true

# ========================================
# üí∞ PAYMENT PREFERENCES
# ========================================
# Default currency
DEFAULT_CURRENCY=USD

# Minimum order amount (in cents)
MIN_ORDER_AMOUNT=500
# $5.00 = 500 cents

# Free shipping threshold (in cents)
FREE_SHIPPING_THRESHOLD=5000
# $50.00 = 5000 cents

# ========================================
# üöö DELIVERY CONFIGURATION
# ========================================
# Delivery radius (in miles)
DEFAULT_DELIVERY_RADIUS=25

# Delivery time slots
ENABLE_SCHEDULED_DELIVERY=true
DELIVERY_SLOT_DURATION=120
# Duration of delivery slots in minutes (2 hours = 120 minutes)

# ========================================
# üêõ DEBUG & LOGGING
# ========================================
# Debug Mode
DEBUG_MODE=true
VERBOSE_LOGGING=true

# API Request Logging
LOG_API_REQUESTS=true
LOG_API_RESPONSES=false
LOG_API_ERRORS=true

# Redux/State Logging
LOG_STATE_CHANGES=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ========================================
# üß™ TESTING & DEVELOPMENT
# ========================================
# Mock Data
USE_MOCK_DATA=false
MOCK_API_DELAY=1000
# Artificial delay for mock API responses (1 second = 1000ms)

# Test Users
TEST_USER_EMAIL=test@farmersmarket.com
TEST_USER_PASSWORD=Test123!@#

# Bypass Authentication (DEV ONLY!)
BYPASS_AUTH=false

# Enable React Native Debugger
ENABLE_REACT_NATIVE_DEBUGGER=true

# ========================================
# üì± EXPO CONFIGURATION
# ========================================
# EAS Build Configuration
EAS_PROJECT_ID=YOUR_EAS_PROJECT_ID_HERE

# Expo Updates
EXPO_UPDATES_ENABLED=true
EXPO_UPDATES_CHECK_ON_LAUNCH=always
# Options: always | never | wifi-only

# ========================================
# üåê SOCIAL MEDIA & SHARING
# ========================================
# Social Media Links
FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID_HERE
TWITTER_HANDLE=@farmersmarket
INSTAGRAM_HANDLE=@farmersmarket

# Deep Linking
APP_SCHEME=farmersmarket
APP_DEEP_LINK_URL=farmersmarket://

# Universal Links
UNIVERSAL_LINK_DOMAIN=app.farmersmarket.com

# ========================================
# üìß EMAIL & CUSTOMER SUPPORT
# ========================================
SUPPORT_EMAIL=support@farmersmarket.com
SUPPORT_PHONE=+1-555-FARM-HELP

# ========================================
# üé® THEME & BRANDING
# ========================================
# Brand Colors (override defaults)
BRAND_PRIMARY_COLOR=#10b981
BRAND_SECONDARY_COLOR=#059669
BRAND_ACCENT_COLOR=#f59e0b

# ========================================
# üîÑ SYNC & BACKGROUND TASKS
# ========================================
# Background Sync Interval (minutes)
BACKGROUND_SYNC_INTERVAL=15

# Background Location Updates
ENABLE_BACKGROUND_LOCATION=false

# ========================================
# üìä PERFORMANCE BUDGETS
# ========================================
# Performance Targets
TARGET_TTI=3000
# Time to Interactive in milliseconds (3 seconds)

TARGET_FCP=1500
# First Contentful Paint in milliseconds (1.5 seconds)

MAX_BUNDLE_SIZE=5242880
# Maximum bundle size in bytes (5MB)

# ========================================
# üåç LOCALIZATION
# ========================================
DEFAULT_LANGUAGE=en
DEFAULT_LOCALE=en-US
SUPPORTED_LANGUAGES=en,es,fr,de

# Date Format
DATE_FORMAT=MM/DD/YYYY
TIME_FORMAT=12h
# Options: 12h | 24h

# Number Format
DECIMAL_SEPARATOR=.
THOUSANDS_SEPARATOR=,

# ========================================
# üí° TIPS
# ========================================
# - For iOS Simulator development, use: http://localhost:3001/api
# - For Android Emulator development, use: http://10.0.2.2:3001/api
# - For physical device testing, use your computer's IP: http://192.168.1.XXX:3001/api
# - Find your local IP:
#   - macOS/Linux: ifconfig | grep "inet "
#   - Windows: ipconfig | findstr IPv4
# - Always use HTTPS in production
# - Keep this file secure and never commit `.env` to Git
# - Update `.gitignore` to exclude `.env` files
