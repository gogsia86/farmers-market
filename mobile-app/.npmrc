# Farmers Market Platform - Mobile App NPM Configuration
# This file configures npm behavior for the mobile app

# Allow legacy peer dependencies to resolve conflicts
# This is needed for React Native and Expo ecosystem compatibility
legacy-peer-deps=true

# Use exact versions for better reproducibility
save-exact=false

# Increase network timeout for slow connections
fetch-timeout=300000

# Retry failed network requests
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Disable package-lock for faster installs (optional - can be removed)
# package-lock=false

# Show progress during install
loglevel=notice

# Enable strict SSL
strict-ssl=true

# Use npm registry
registry=https://registry.npmjs.org/
